/* pages/video/video.wxss */
video {
  width: 100vw;
}

.video-title {
  font-size: 40rpx;
  font-weight: bold;
}

.box {
  margin-right: 20rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.collect {
  width: 70rpx;
  height: 70rpx;
  margin-right: 10rpx;
}

.coll {
  display: flex;
  align-items: center;
}

.end {
  bottom: 30rpx;
  position: fixed;
  right: 40rpx;
  left: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: white;

}

.calendar {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.end image {
  width: 50rpx;
  height: 50rpx;
}

.add {
  font-size: 28rpx;
}

.start {
  width: 230rpx;
  height: 90rpx;
  background-color: #5E94E4;
  color: white;
  border-radius: 30rpx;
  font-size: 37rpx;
  display: flex;
  justify-content: center;
  align-items: center;

}

