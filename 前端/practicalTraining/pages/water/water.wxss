page {
  background: radial-gradient(rgb(212, 233, 252), rgb(234, 244, 254), rgb(253, 255, 254));
}

.all {
  height: 30px;
  padding-top: 70rpx;
  display: flex;
  align-items: center;
  padding-bottom: 10px;
}

.image {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}

.left1 {
  height: 50rpx;
  width: 50rpx;
  margin-left: 30rpx;
  margin-right: 10rpx;
}

.up {
  font-size: larger;
  margin-left: 20px;
  letter-spacing: 1px;
  position: absolute;
  z-index: 1;
}

.middle {
  margin-left: 20px;
  margin-top: 75px;
  position: absolute;
  z-index: 1;
}

.line {
  width: 80%;
  height: 2px;
  margin-top: 140px;
