  margin-left: 49%;
  margin-top: 530px;
  background-color: rgba(197, 220, 255, 0.6);
}

.round2 {
  width: 18%;
  height: 67px;
  margin-left: 41%;
  margin-top: 560px;
  background-color: rgba(197, 220, 255, 0.6);
  border-radius: 50%;
}

.new {
  width: 50%;
  margin-left: 25%;
  margin-top: 18px;
}

.person {
  width: 190px;
  position: absolute;
  z-index: 1;
  margin-top: 450px;
  height: 320px;
}