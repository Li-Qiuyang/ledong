  margin-bottom: 30rpx;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/*对话框 */
.commodity_attr_box {
  border-radius: 10px;
  height: 500rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

/* 标签 */
.tag {
  border: 1px solid black;
  border-radius: 10px;
  font-size: 15px;
  padding: 5px;
  margin-top: 5px;
}


.label {
  margin-top: 5px;
  padding: 7px;
}

.addTag {
  margin-right: 20px;
  height: 20px;
  width: 20px;
}

.text_addTag {
  margin-top: 10px;
  margin-left: 15px;
  font-weight: bold;
  font-size: 22px;
}

.delTag {
  margin-top: 5px;
  margin-left: 5px;
  height: 15px;
  width: 15px;
}

/* 动态选择 */

.right {
  display: flex;
  margin-left: 320rpx;
}

/*对话框 */
.choose_box {
  border-radius: 10px;
  margin-left: -55px;
  margin-top: 25px;
  width: 100px;
  padding-bottom: 5px;
  overflow: hidden;
  position: absolute;
  z-index: 2000;
  background: #fff;
}

.right_btn {
  margin-left: 10px;
  height: 40px;
  width: 80px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  border-bottom: 1px solid grey;
}

.txt_btn {
  margin-left: 20px;
}

.img_btn {
  height: 45rpx;
