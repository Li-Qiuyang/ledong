/* pages/skipVideo/skipVideo.wxss */
.gif{
  width: 100%;
  height: 100%;
}
.gifs{
  margin-top: 90rpx;
  display: flex;
  width: 80%;
  margin-left: 70rpx;
  height: 700rpx;
}
.skip_img{
  height: 100%;
  width: 100%;
}
.countdown{
  font-size: 200rpx;
  font-weight: bolder;
  position: fixed;
  color: white;
  left: 44%;
  top:50%
}
.count{
  display: none;
}
.timer{
  font-size: 50rpx;
  font-weight: bolder;
  position: fixed;
  color: black;
  left: 6%;
  bottom:80%
}
.num{
  font-size: 55rpx;
  font-weight: bolder;
  color: black;
  bottom:85%
}
.nums{
  font-size: 60rpx;
  font-weight: bolder;
  color: rgb(128, 123, 123);
}

.all{
  left: 5.5%;
  bottom: 85%;
  position: fixed;
  align-items: center;
  justify-content: center;
}
.pause{
  position: fixed;
  height: 100rpx;
  width: 180rpx;
  background-color: gainsboro;
  border-radius:10%;
  left: 70%;
  bottom:5%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pause_img{
  height: 60rpx;
  width:  60rpx;
}
.start{
  position: fixed;
  height: 150rpx;
  width: 150rpx;
  background-color: red;
  border-radius: 50%;
  left: 25%;
  bottom:25%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.end{
  position: fixed;
  height: 150rpx;
  width: 150rpx;
  background-color: rgb(20, 228, 82);
  border-radius: 50%;
  left: 55%;
  bottom:25%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.exercise{
  position: fixed;
  height: 150rpx;
  font-size: 20px;
  font-weight: bold;
  left: 30%;
  bottom:25%;
}