/* pages/record/record.wxss */
page{
  background-color: #D2E1FF;
}
.show{
  margin: 20rpx;
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  border: 1px solid black;
  border-radius: 10%;
  width: 120rpx;
  display: flex;
  align-items: center;
}
.txt{
  margin-left: 5rpx;
  font-weight: bolder;
}
.down{
  width: 50rpx;
  height:50rpx;
}
.content{
  width: 120rpx;
  position: absolute;
  margin-top: 195rpx;
  top: 62rpx;
  left: 40rpx;
  background: #ece8e8;
  box-shadow: 0px 0px 10px 1px rgba(209, 209, 209, 0.35);
  padding-left: 10rpx;
  overflow-x: hidden;
  overflow-y: scroll;
}
.content>view{
  padding: 10rpx 0;
}
.active{
  color: #56D88A;
}
.middle{
  display: flex;
  justify-content: space-between;
}
.mid1{
  margin-left: 40rpx;
}
.mid2{
  margin-right: 120rpx;
}
.txt2{
  font-weight: bolder;
  font-size: 100rpx;
}
.bottom{
  margin-top: 100rpx;
  padding-top: 20rpx;
  background-color: white;
  border-radius: 5%;
  height: 1100rpx;
}
.bottom_txt{
  margin-left: 20rpx;
  font-weight: bold;
}
.record{
  border-bottom: 1px solid black;
  display: flex;
}
.map{
  width: 150rpx;
  height: 150rpx;
}
.btn{
  position: absolute;
  bottom:500rpx;
  display: flex;
  width: 100%;
  justify-content: space-between;
}
.btn1{
  width: 80rpx;
  height: 80rpx;
}
.change{
  height: 80rpx;
  background-color: white;
  width: 80rpx;
  border-radius: 50%;
}
.bottom2{
  position: absolute;
  bottom:0rpx;
  height: 150rpx;
  background-color: white;
  width: 100%;
  border-radius: 10%;
}
.bottom1{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px dashed black;
}
.author{
  width: 80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-top: -50rpx;
  margin-left: 40rpx;
}