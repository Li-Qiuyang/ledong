.img {
  width: 100%;
  height: 95vh;
  padding-top: 41px;
  position: fixed;
  z-index: -1;
  opacity: 80%;
}
.bottom-dialog-body {
  position: absolute;
  z-index: 10001;
  bottom: 0;
  left: 10rpx;
  width: 300px;
  right: 0;
  padding: 30px;
  height: 90vh;
}

/*动画前初始位置*/
.bottom-pos {
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
}

.text {
  font-weight: bold;
  font-size: 50px;
  color: rgb(59, 59, 59);
  font-family: "Lucida Calligraphy", cursive, serif, sans-serif;
}

.start{
  position: fixed;
  bottom: 50px;
  right: 0px;
  width: 120px;
  height: 60px;
  line-height: 60px;
  padding-left: 30px;
  background-color: #5E94E4;
  color: white;
  border-radius: 10px 0px 0px 10px;
  font-size: 34rpx;
  display: flex;
  align-items: center;
}
.right{
  width: 45rpx;
  height: 45rpx;
  margin-left: 60rpx;
}
.title0{
  position: fixed;
  top: 110px;
  left: 20px;
}
.title1{
  position: fixed;
  top: 140px;
  left: 20px;
}
.title2{
  position: fixed;
  top: 170px;
  left: 20px;
  font-size: 56rpx;
  font-weight: bold;
}
