/* pages/food/food.wxss */
.containers {
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  padding: 130rpx 0;
  box-sizing: border-box;
}

.trend {
  position: fixed;
  color: #666;
  font-weight: bold;
  font-size: 30rpx;
}

.trend image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

.food {
  padding: 20rpx;
  margin: 0 auto;
  width: 650rpx;
  height: 450rpx;
  background-color: #CAE2FA;
  border-radius: 40rpx;
}

.food-title {
  text-align: center;
  font-weight: bold;
  font-size: 35rpx;
}

.food-time {
  text-align: center;
  margin-top: 10rpx;
  color: #666;
  font-size: 25rpx;
}

.icon {
  width: 100rpx;
  height: 100rpx;
  background-color: white;
  border-radius: 50%;
  margin: 0 auto;
  margin-top: 30rpx;
}

.icon image {
  width: 70rpx;
  height: 70rpx;
  margin-left: 19rpx;
  margin-top: 17rpx;
}

.kaluli {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}

.add {
  margin-top: 20rpx;
  padding: 0 120rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  text-align: center;
}

.add image {
  width: 55rpx;
  height: 55rpx;
}

.suggest {
  /* margin-top: -100rpx; */
  padding: 30rpx 35rpx;
}

.suggest-title {
  font-size: 36rpx;
}

.suggest_infor {
  margin-top: 20rpx;
  display: flex;
}

.food_pic {
  height: 200rpx;
  width: 200rpx;
  border-radius: 20%;
}

.include {
  margin-left: 20rpx;
  width: 470rpx;
  height: 200rpx;
  border-radius: 10px;
  color: white;
}

.food_name {
  margin-left: 20rpx;
  margin-top: 50rpx;
  font-size: 35rpx;
}

.food_trait {
  margin-left: 20rpx;
  margin-top: 5rpx;
  font-size: 22rpx;
}